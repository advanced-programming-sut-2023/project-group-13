<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menus.ProfileMenuG">
   <children>
      <ImageView fitHeight="420.0" fitWidth="520.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image requestedHeight="400" requestedWidth="520" url="@../png/mainmenu.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="username" layoutX="176.0" layoutY="175.0" promptText="New Username" style="-fx-border-width: 2; -fx-border-color: gold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: white;">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Text fill="GOLD" layoutX="46.0" layoutY="144.0" stroke="#33082e" strokeType="OUTSIDE" strokeWidth="5.0" text="Choose Your New Username" textAlignment="CENTER">
         <font>
            <Font size="34.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Text>
      <Button layoutX="200.0" layoutY="217.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="57.0" style="-fx-background-color: black; -fx-background-radius: 10;" text="Set" textAlignment="CENTER" textFill="WHITE" onMouseClicked="#setNewUsername" />
      <Button layoutX="260.0" layoutY="217.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="57.0" style="-fx-background-color: black; -fx-background-radius: 10;" text="Cancel" textAlignment="CENTER" textFill="WHITE" onMouseClicked="#backToProfile" />
   </children>
</AnchorPane>
